[MASTER]
extension-pkg-whitelist=numpy,cv2

[MESSAGES CONTROL]
disable=
    bad-continuation,
    broad-except,
    duplicate-code,
    fixme,
    global-statement,
    import-outside-toplevel,
    import-self,  # for pytoolkit/__init__.py
    invalid-name,
    invalid-unary-operand-type,  # for tf.Tensor
    len-as-condition,
    logging-format-interpolation,
    logging-fstring-interpolation,
    missing-docstring,
    no-else-return,
    no-self-use,
    too-few-public-methods,
    too-many-ancestors,
    too-many-arguments,
    too-many-branches,
    too-many-instance-attributes,
    too-many-lines,
    too-many-locals,
    too-many-nested-blocks,
    too-many-return-statements,
    too-many-statements,
    using-constant-test,
    unexpected-keyword-arg,  # TF 2.2 False Positive
    no-value-for-parameter,  # TF 2.2 False Positive

[FORMAT]
max-line-length=256

[TYPECHECK]
ignored-modules=
    IPython,
    __init__,
    catboost,
    chainercv,
    distutils,
    horovod,
    lightgbm,
    matplotlib.cm,
    mpi4py,
    mpi4py.MPI,
    numpy,
    optuna,
    tensorflow,
    vmprof,
    xgboost,
